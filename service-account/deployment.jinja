{% set domain = env['project'].split(':') %}
{% if domain|length >1 %}
{% set projectName = domain[1] + '.' + domain[0] %}
{% else %}
{% set projectName = domain[0] %}
{% endif %}
{% set roles = properties['roles'] %}
{% set sa-identifier = projectName ~ '-sa' %}


resources:
- name: {{ sa-identifier }}
  type: iam.v1.serviceAccount
  properties:
    accountId: {{ sa-identifier }}
    displayName: {{ sa-identifier }}
{% for role in roles %}
- name: bind-iam-policy-{{ loop.index }}
  type: gcp-types/cloudresourcemanager-v1:virtual.projects.iamMemberBinding
  properties:
    resource: {{ projectName }}
    role: {{ role }}
    member: serviceAccount:$(ref.{{ sa-identifier }}.email)
{% endfor %}

outputs:
- name: name
  value: $(ref.{{ sa-identifier }}.name)
- name: serviceAccount
  value: $(ref.{{ sa-identifier }}.email)
