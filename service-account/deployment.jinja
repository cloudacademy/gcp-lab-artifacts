{% set domain = env['project'].split(':') %}
{% if domain|length >1 %}
{% set projectName = domain[1] + '.' + domain[0] %}
{% else %}
{% set projectName = domain[0] %}
{% endif %}
{% set roles = properties['roles'] %}

resources:
- name: {{ project }}-svc-account
  type: iam.v1.serviceAccount
  properties:
    accountId: {{ project }}-svc-account
    displayName: {{ project }}-svc-account
  accessControl:
    gcpIamPolicy:
      bindings:

{% for role in roles %}
      - role: {{ role }}
        members:
        - "serviceAccount:{{ project }}-svc-account@{{ projectName }}.iam.gserviceaccount.com"
{% endfor %}

outputs:
- name: serviceAccount
  value: $(ref.{{ project }}-svc-account.email)