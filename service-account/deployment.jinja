{% set project = env['project'] %}

resources:
- name: {{ project }}-svc-account
  type: iam.v1.serviceAccount
  properties:
    accountId: {{ project }}-svc-account
    displayName: {{ project }}-svc-account

- name: get-iam-policy
  action: gcp-types/cloudresourcemanager-v1:cloudresourcemanager.projects.getIamPolicy
  properties:
    resource: {{ project }}
  metadata:
    runtimePolicy:
    - 'UPDATE_ALWAYS'

- name: patch-iam-policy
  action: gcp-types/cloudresourcemanager-v1:cloudresourcemanager.projects.setIamPolicy
  properties:
    resource: {{ project }}
    policy: $(ref.get-iam-policy)
    gcpIamPolicyPatch:
      add:
{% for role in roles %}
      - role: {{ role }}
        members:
        - serviceAccount:$(ref.{{ project }}-svc-account.email)
{% endfor %}

outputs:
- name: serviceAccount
  value: $(ref.{{ project }}-svc-account.email)