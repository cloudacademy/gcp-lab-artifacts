{% set domain = env['project'].split(':') %}
{% if domain|length >1 %}
{% set projectName = domain[1] + '.' + domain[0] %}
{% else %}
{% set projectName = domain[0] %}
{% endif %}
{% set roles = properties['roles'] %}

resources:
- name: {{ projectName }}-sa
  type: iam.v1.serviceAccount
  properties:
    accountId: {{ projectName }}-sa
    displayName: {{ projectName }}-sa
  accessControl:
    gcpIamPolicy:
      bindings:
{% for role in roles %}
      - role: {{ role }}
        members:
        - "serviceAccount:{{ projectName }}-sa@{{ projectName }}.iam.gserviceaccount.com"
{% endfor %}

outputs:
- name: serviceAccount
  value: $(ref.{{ projectName }}-sa.email)